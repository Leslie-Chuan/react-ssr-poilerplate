// 此文件仅用于本地开发配置IDE在检查web下ts语法时的规则，不用于实际构建
{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "../output",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "stripInternal": true,
    "target": "es5",
    "jsx": "react"
  }
}